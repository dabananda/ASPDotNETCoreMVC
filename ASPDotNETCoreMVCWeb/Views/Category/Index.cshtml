@model List<Category>

<div class="container">
	<partial name="_Notifications" />
	<div class="row my-4 w-75 mx-auto">
		<div class="col">
			<h2>Category List</h2>
		</div>
		<div class="col text-end">
			<a class="btn btn-primary" asp-controller="Category" asp-action="Create">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>

	<div>
		<table class="table table-bordered table-striped mt-4 w-75 mx-auto">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Category Order</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@category.Name</td>
						<td>@category.DisplayOrder</td>
						<td>
							<a class="btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
								<i class="bi bi-pencil"></i> Edit
							</a>
							<a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
