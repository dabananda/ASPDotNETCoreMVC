@model Category

<div>
	<form method="post" class="border p-3 w-50 mx-auto">
		<h2>Edit Category</h2>
		<hr />
		<input asp-for="Id" type="hidden" />
		<div class="form-group mb-3 row">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" type="text" class="form-control" disabled />
		</div>
		<div class="form-group mb-3 row">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" type="number" class="form-control" disabled />
		</div>
		<div class="row">
			<div class="col">
				<button type="submit" class="w-100 btn btn-danger col from-control">Delete</button>
			</div>
			<div class="col">
				<a class="w-100 btn btn-outline-secondary border from-control" asp-controller="Category" asp-action="Index">Back to Category</a>
			</div>
		</div>
	</form>
</div>